<?xml version="1.0" encoding="utf-8" ?>
<ChargeDocumentTemplate>
    <Header>
        <Items>
            <Text Style="Bold" Size="16.0">
                <Color R="152" G="115" B="172"/>
                <Value>Customer Number: {{CUSTOMER_NUMBER}}</Value>
            </Text>
            <Text Style="Bold" Size="16.0">
                <Color R="152" G="115" B="172"/>
                <Value>Customer Name: {{CUSTOMER_NAME}}</Value>
            </Text>
        </Items>
    </Header>
    <Body>
        <Items>
            <Text Style="Bold" Size="14.0">
                <Value>Charges</Value>
            </Text>
            <HorizontalLine />
            <ChargeTable>
                <Heading>
                    <Text Style="Bold" Size="12.0">
                        <Value>Date</Value>
                    </Text>
                    <Text Style="Bold" Size="12.0">
                        <Value>Game</Value>
                    </Text>
                    <Text Style="Bold" Alignment="Right" Size="12.0">
                        <Value>Cost (pence)</Value>
                    </Text>
                </Heading>
                <Cells>
                    <Text Size="12.0">
                        <Value>{{CHARGE_DATE}}</Value>
                    </Text>
                    <Text Size="12.0">
                        <Value>{{CHARGE_NAME}}</Value>
                    </Text>
                    <Text Alignment="Right" Size="12.0">
                        <Value>{{CHARGE_COST}}</Value>
                    </Text>
                </Cells>
            </ChargeTable>
            <HorizontalLine />
            <Text Style="Bold" Alignment="Right" Size="14.0">
                <Value>Total (pence): {{CUSTOMER_TOTAL}}</Value>
            </Text>
        </Items>
    </Body>
</ChargeDocumentTemplate>
